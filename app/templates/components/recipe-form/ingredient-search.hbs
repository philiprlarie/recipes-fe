{{input
  value=value
  key-up=(action "handleFilterEntry")
  placeholder=(or ingredient.name "Ingredient Name")
}}

<ul>
  {{#each possibleIngredients as |ingredient|}}
    <li {{action "onIngredientClicked" ingredient}}>
      {{highlighted-substring
        str=ingredient.name
        substr=value
      }}
    </li>
  {{/each}}

  {{#if shouldShowCreateButton}}
    <li {{action "onNewIngredientClicked"}}>
      Create ingredient with name <strong>"{{value}}"</strong>
    </li>
  {{/if}}
</ul>
