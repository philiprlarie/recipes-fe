{{paper-input
  label=label
  value=value
  onKeyUp=(action "handleFilterEntry")
  onChange=(action (mut value))
  placeholder=placeholder
  validationErrorMessages=validationErrorMessages
  isTouched=(readonly formWasSubmitted)
}}

{{#if shouldShowList}}
  {{#paper-list class="input-searchable-list"}}
    {{#each possibleOptions as |option|}}
      {{#paper-item onClick=(action "onOptionClicked" option)}}
        {{highlighted-substring
          str=(get option keyPath)
          substr=value
        }}
      {{/paper-item}}
    {{/each}}
    {{#if shouldShowCreateButton}}
      {{#paper-item onClick=(action "onCreateButtonClicked")}}
        <p>{{createButtonText}} <strong>"{{value}}"</strong></p>
      {{/paper-item}}
    {{/if}}
  {{/paper-list}}
{{/if}}
