{{recipe-form/ingredient-search
  ingredient=(readonly recipeIngredient.ingredient)
  ingredientWasSelected=(action "ingredientWasSelected")
  validationErrorMessages=recipeIngredient.validations.attrs.ingredient.errors
  formWasSubmitted=formWasSubmitted
}}

{{paper-input
  label="Amount"
  value=recipeIngredient.amount
  onChange=(action (mut (get recipeIngredient "amount")))
  type="number"
  placeholder="e.g. 2"
  validationErrorMessages=recipeIngredient.validations.attrs.amount.errors
  isTouched=(readonly formWasSubmitted)
}}

{{recipe-form/measure-search
  measureWasSelected=(action (mut (get recipeIngredient "measure")))
  measure=recipeIngredient.measure
  measures=measures
  validationErrorMessages=recipeIngredient.validations.attrs.measure.errors
  formWasSubmitted=formWasSubmitted
}}

{{paper-input
  label="Notes"
  value=recipeIngredient.notes
  onChange=(action (mut (get recipeIngredient "notes")))
  placeholder="You can substitute with..."
}}

{{#if isNew}}
  {{#paper-button
    onClick=(action "addIngredientButtonClicked")
    raised=true
    primary=true
  }}
    Add ingredient
  {{/paper-button}}
{{else}}
  {{#paper-button
    onClick=(action "deleteIngredientButtonClicked")
    raised=true
    primary=true
  }}
    Delete ingredient
  {{/paper-button}}
{{/if}}
