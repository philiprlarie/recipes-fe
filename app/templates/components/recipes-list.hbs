{{#paper-toolbar accent="true" class="top-toolbar"}}
  {{#paper-toolbar-tools}}
    <span class="flex"></span>
    <h1>HI, these are great recipes</h1>
    <span class="flex"></span>
    {{#link-to "recipes.edit" "new"}}
      {{paper-button raised=true label="Add recipe"}}
    {{/link-to}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

<ul>
  {{#each recipes as |recipe|}}
    <li>{{#link-to "recipes.recipe" recipe.id}}{{recipe.name}}{{/link-to}}</li>
  {{/each}}
</ul>
