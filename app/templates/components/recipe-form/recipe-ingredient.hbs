{{recipe-form/ingredient-search
  ingredient=(readonly recipeIngredient.ingredient)
  ingredientWasSelected=(action "ingredientWasSelected")
}}

{{paper-input
  label="Amount"
  value=recipeIngredient.amount
  onChange=(action (mut (get recipeIngredient "amount")))
  type="number"
  placeholder="e.g. 2"
}}

{{#paper-select
  label="Units"
  options=measures
  selected=(if recipeIngredient.measure.content recipeIngredient.measure)
  onChange=(action (mut (get recipeIngredient "measure")))
as |measure|
}}
  {{measure.unit}}
{{/paper-select}}

{{paper-input
  label="Notes"
  value=recipeIngredient.notes
  onChange=(action (mut (get recipeIngredient "notes")))
  placeholder="You can substitute with..."
}}

{{#if isNew}}
  {{#paper-button
    onClick=(action "addIngredientButtonClicked")
    raised=true
    primary=true
  }}
    Add ingredient
  {{/paper-button}}
{{else}}
  {{#paper-button
    onClick=(action "deleteIngredientButtonClicked")
    raised=true
    primary=true
  }}
    Delete ingredient
  {{/paper-button}}
{{/if}}
